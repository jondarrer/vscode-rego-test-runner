{
  "name": "vscode-rego-test-runner",
  "displayName": "Rego Test Runner for VS Code",
  "description": "Run Rego tests for Open Policy Agent within VS Code",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "author": "Jonathan Darrer <jonny@jondarrer.me.uk>",
  "homepage": "https://github.com/jondarrer/vscode-rego-test-runner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jondarrer/vscode-rego-test-runner.git"
  },
  "bugs": {
    "url": "https://github.com/jondarrer/vscode-rego-test-runner/issues"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "jondarrer",
  "activationEvents": [
    "workspaceContains:**/*.rego"
  ],
  "categories": [
    "Testing"
  ],
  "keywords": [
    "open policy agent",
    "opa",
    "rego",
    "policy"
  ],
  "preview": true,
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node --test ./out/test",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.10",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#b8b8b8",
    "theme": "light"
  }
}
