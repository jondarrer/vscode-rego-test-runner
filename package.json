{
  "name": "vscode-rego-test-runner",
  "displayName": "Rego Test Runner for VS Code",
  "description": "Run Rego tests for Open Policy Agent within VS Code",
  "version": "0.1.3",
  "license": "Apache-2.0",
  "author": "Jonathan Darrer <jonny@jondarrer.me.uk>",
  "homepage": "https://github.com/jondarrer/vscode-rego-test-runner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jondarrer/vscode-rego-test-runner.git"
  },
  "bugs": {
    "url": "https://github.com/jondarrer/vscode-rego-test-runner/issues"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "jondarrer",
  "activationEvents": [
    "workspaceContains:**/*.rego"
  ],
  "categories": [
    "Testing"
  ],
  "keywords": [
    "open policy agent",
    "opa",
    "rego",
    "policy"
  ],
  "preview": false,
  "main": "./out/extension.js",
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node --test",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.10",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "icon": "logo.jpeg",
  "galleryBanner": {
    "color": "#b9bcbd",
    "theme": "light"
  },
  "contributes": {
    "configuration": {
      "title": "Rego Test Runner",
      "type": "object",
      "properties": {
        "regoTest.policyTestDir": {
          "type": "string",
          "scope": "window",
          "default": ".",
          "description": "Relative folder from which to load the policy tests"
        },
        "regoTest.testFilePatterns": {
          "type": "array",
          "scope": "window",
          "default": [
            "**/*_test.rego"
          ],
          "description": "List of patterns which identify files as policy tests"
        },
        "regoTest.opaCommand": {
          "type": [
            "string",
            null
          ],
          "scope": "machine",
          "default": "opa",
          "description": "The name, or full path to the opa command on your system, defaults to opa (or opa.exe on windows)"
        },
        "regoTest.showEnhancedErrors": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Shows errors by running tests in text output mode, rather than JSON. This is experimental, and not battle tested, so is off by default"
        }
      }
    }
  },
  "dependencies": {
    "minimatch": "^9.0.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --quiet",
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
